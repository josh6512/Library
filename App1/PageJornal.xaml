                </DataTemplate>
            </GridView.ItemTemplate>

        </GridView>-->

        <Button Width="100" Margin="644,45,0,0" VerticalAlignment="Top" Height="53" Click="GoToBooks">go to books</Button>

    </Grid>
</Page>
